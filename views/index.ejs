<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs')%>
<body class="container-fluid">
    <%- include('./partials/nav.ejs')%>
    <h1>Home</h1>
   
    <h3>This was served by node by yours Truly</h3>
    <!-- Uncomment to see use of static image file -->
    <!-- <img src="/indep.webp"> -->
    <h1>All Blogs</h1>
    <div class="blogs">
        <% if (blogs.length>0) { %>
         <% blogs.forEach(blog => { %>
         <a class="single" href="/blogs/<%= blog._id%>">
          <h3><%= blog.title %> </h3>
          <p><%= blog.blogContent %> </p>
         </a>
         <% }) %>
        <% } else { %>
            <p>No Blogs to display</p>
        <% } %> 
         
    </div>
    <%- include('./partials/footer.ejs')%>
</body>
</html>